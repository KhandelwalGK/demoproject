version: "3"
services:
   django:
     build: .
     image: web
#     command: python manage.py runserver 0.0.0.0:8000
     ports:
        - "8000:8000"
   celery:
       build: 
         dockerfile: Dockerfile.celery
         context: .
       image: celery
       command: celery -A demoproject worker --loglevel=info
       depends_on:
         - django
   redis:
     image: redis
     ports:
      - "6379:6379"
     depends_on:
          - django

